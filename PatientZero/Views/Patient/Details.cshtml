@using PatientZero.Models;

@{
    ViewBag.Title = "Details";
    var sections = Model.Sections.ToList();
}

@model Entity

@for (int i = 0; i < sections.Count; i += 2)
{
    <div class="row-fluid">
        <div class="span7">
            @Html.Partial("~/Views/Section/Details.cshtml", sections[i]);
        </div>
        <div class="span5">
            @if(i+1 < sections.Count) { 
                @Html.Partial("~/Views/Section/Details.cshtml", sections[i+1])
            }
        </div>
    </div>
}